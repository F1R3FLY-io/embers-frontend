{
  "name": "@f1r3fly-io/oslf-editor",
  "version": "0.6.0",
  "description": "Operational Semantics in Logical Form editor with React components",
  "keywords": [
    "OSLF",
    "editor",
    "RhoLang",
    "F1r3fly"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/styles/blockly-overrides.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --project tsconfig.lib.json && vite build",
    "test": "vitest run",
    "lint": "eslint --fix .",
    "typecheck": "tsc -b --noEmit",
    "format:code": "prettier --write '**/*.{js,jsx,cjs,ts,tsx,mts,html,svg,json,css,scss}'",
    "format:css": "stylelint --allow-empty-input --fix '**/*.{css,scss}'",
    "ci:lint": "eslint .",
    "ci:check:code": "prettier --check '**/*.{js,jsx,cjs,ts,tsx,mts,html,svg,json,css,scss}'",
    "ci:check:css": "stylelint '**/*.{css,scss}'"
  },
  "dependencies": {
    "@blockly/plugin-cross-tab-copy-paste": "^8.0.7",
    "blockly": "^12.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "eslint-plugin-unused-imports": "^4.4.1",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
