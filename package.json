{
  "name": "embers",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @f1r3fly-io/embers-client-sdk build && pnpm --filter @f1r3fly-io/embers-frontend dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "biome check --write .",
    "typecheck": "pnpm -r typecheck",
    "ci:lint": "biome check .",
    "format:code": "biome format --write .",
    "ci:check:code": "biome format .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "sass-embedded": "^1.92.0",
    "stylelint": "^16.23.1",
    "stylelint-config-recess-order": "^7.2.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-sass-dts": "^1.3.31"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ]
  }
}
